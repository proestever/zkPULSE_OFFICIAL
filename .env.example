# zkPULSE Environment Configuration
# Copy this file to .env and fill in your values

# CORS Configuration (for production deployments)
CORS_ORIGIN=https://your-domain.com
CUSTOM_DOMAIN=your-domain.com

# Relayer Configuration
# NEVER commit your actual private key!
RELAYER_ADDRESS=0xYourRelayerAddressHere
RELAYER_PRIVATE_KEY=0xYourPrivateKeyHere_NEVER_COMMIT_THIS

# Server Configuration
PORT=8888
NODE_ENV=development

# Optional: Custom RPC endpoints (if not using default)
# RPC_URL=https://your-rpc-endpoint.com
# WSS_URL=wss://your-websocket-endpoint.com